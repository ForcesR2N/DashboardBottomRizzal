<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bluebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginStart="-10dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="600dp"
            android:src="@drawable/rizzal">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-75dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            android:layout_marginBottom="-60dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Zuhrizal"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indonesia"
                android:layout_marginTop="42dp"
                android:layout_marginStart="14dp">
            </TextView>

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/followbtn"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="225dp">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="80dp"
                android:layout_marginStart="15dp"
                android:textSize="17dp">

            </TextView>

            <TextView
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:text="Hello, guys! My name's Rizal. I like coding and database. I'm not sure what to write here. Oh, here's a life quote of mine: Everyone's gonna die, and no one's gonna remember you, so just do it."
                android:layout_marginTop="105dp"
                android:layout_marginStart="15dp"
                android:textSize="14dp"
                android:fontFamily="sans-serif-condensed-medium">
            </TextView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>